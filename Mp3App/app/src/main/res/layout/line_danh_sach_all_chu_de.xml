<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/linearCardViewChuDe"
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/imgAllChuDe"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>


    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtNameAllChuDe"
        android:layout_below="@id/linearCardViewChuDe"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        android:text="HÃ£y trao cho anh"
        android:textColor="#030303"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/txtAuthorAllChuDe"
        android:layout_below="@id/txtNameAllChuDe"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Various Artists"
        android:textColor="#5E5656"
        android:textSize="15sp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>



</RelativeLayout>