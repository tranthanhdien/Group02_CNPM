<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtIndexDanhSach"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="1"
            android:textColor="#0E0E0E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <ImageView
            android:id="@+id/imgBaiHat"
            android:layout_toRightOf="@id/txtIndexDanhSach"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp">

        </ImageView>

        <TextView
            android:id="@+id/txtNameBaiHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@id/imgBaiHat"
            android:textColor="#F80707"
            android:textSize="19sp"></TextView>

        <TextView
            android:id="@+id/txtAuthorBaiHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/imgBaiHat"
            android:singleLine="true"
            android:text="Author"
            android:textColor="#685F5F"
            android:textSize="18sp"></TextView>

        <ImageView
            android:id="@+id/imgLove"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/iconlove">

        </ImageView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>